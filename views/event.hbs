<!DOCTYPE html>
<html>
    <head>
        <!-- Bootstrap CSS -->
        {{> bootstrap}}
        <link href="/css/menu.css" type="text/css" rel="stylesheet" />
        <link href="/css/event.css" type="text/css" rel="stylesheet" />
    </head>

    <body>
        {{> menu}}


       
        <div class="container col-xs-12">
            <div class="row">
                <div class="col-xs-6">
                    <div class="jumbotron">
                        <div>
                            <form class="form-inline" method="POST" action="/getall" >
                                                                

                                <label for="">Search events</label>
                                <select id="searchOption">
                                    <option value="getAllEvents">All Events</option>

                                {{#each data}}

                                    <option value={{name}}>{{name}}</option>
                                {{/each}}
                                </select>

                                
                                <div>
                                    <label for="" class="container1">
                                    <input type="checkbox" name="allevent" value="getAllEvents">All event
                                    
                                    </label>
                                </div>
                                {{#each data}}
                                    <label class="container1">
                                        <input type="checkbox" name={{name}} value={{name}} id="" class="checkeditem">{{name}}
                                    </label>
                                        
                                {{/each}}
                                <br>

                                <div class="form-group">
                                    <!--                    <label for="exampleInputName2">Name</label>-->
                                    <input type="text" id="SearchBar" placeholder="Enter Event/Activity">
                                </div>
                                <button type="submit" class="btn btn-default" id="getData">Search</button>
                            </form>
                        </div>
                    </div>
                    <div class="col-xs-6">
                    <div class="card" style="width: 50rem;">
                    <div class="card-body" id="events">

                    </div>
                    </div>
                    
                    </div>

                </div>
                <div class="col-xs-6">
                
                    Map View
                    <div id="map"></div>
                        <script src="/scripts/maps.js"></script>
                        <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAN6q6jOWczlbNgBPd_ljm857YUqpyIoVU&callback=initMap">
                        </script>
                
                </div>
            </div>
        </div>
       
            
           
        
        
    </body>

</html>