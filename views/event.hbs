<!DOCTYPE html>
<html>
    <head>
        <!-- Bootstrap CSS -->
        {{> bootstrap}}
        <link href="/css/menu.css" type="text/css" rel="stylesheet" />
        <link href="/css/event.css" type="text/css" rel="stylesheet" />
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    </head>

    <body>
        {{> menu}}


       <button id="permission-btn" onclick="main()">Notify Me!</button>
        <div class="container col-xs-12">
            <div class="row">
                <div class="col-xs-6">
                    <div class="jumbotron">
                            <form class="form-inline">                            

                                <h4>Search events</h4>

                                
                                <div class="inputGroup">
                                    
                                    <input type="checkbox" class="invis" id="allevents" value="getAllEvents" checked>
                                    <label for="allevents">All Events</label>
                                    </label>
                                </div>
                                {{#each data}}
                                    <div class="inputGroup">
                                    
                                        <input type="checkbox" class="invis" value={{name}} id={{name}}>
                                        <label for={{name}}>{{name}}</label>
                    
                                    </div>
                                
                                {{/each}}
                                <br>

                                <div class="form-group">
                                    <input type="text" id="SearchBar" placeholder="Enter Event/Activity">
                                </div>
                                <button type="submit" class="btn btn-default" id="getData">Search</button>
                            </form>
                        
                    </div>
                    <div class="col-xs-6">
                    <div class="card" style="width: 50rem;">
                    <div class="card-body" id="events">

                    </div>
                    </div>
                    
                    </div>

                </div>
                <div class="col-xs-6">
                
                    Map View
                    <div id="map"></div>
                        <script src="/scripts/maps.js"></script>
                        <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAN6q6jOWczlbNgBPd_ljm857YUqpyIoVU&callback=initMap">
                        </script>
                
                </div>
            </div>
        </div>
    <input class="invis" value="{{message}}" id="sqlstatus">   
    </body>        
           
        
    

</html>

<script src="/scripts/notifications.js"></script>

<script>
    let message = document.getElementById("sqlstatus").value;
    if (message == "already in wishlist") {
        Swal.fire({
            text: "This event is already in your wishilsit",
            icon: "error",
        });
    } else if(message == "added in wishlist"){
        Swal.fire({
            text: "This event is added in your wishilsit",
            icon: "success",
        });
    }
    
</script>
