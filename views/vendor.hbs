<!DOCTYPE html>
<html>
    <head>
        
        {{> bootstrap}}
        <link href="/css/menu.css" type="text/css" rel="stylesheet" />
        <link href="/css/vendor.css" type="text/css" rel="stylesheet" />

        <script>
            if ({{disable_edit}}){
                document.getElementById("edit_button").disabled = true;
            }
        </script>

    </head>

    <body>

        {{> menu}}

        <div class="container col-xs-12">
            <p><strong>Welcome {{vendor}}!</strong> </p>
            <div class="row">
                <div class="col-xs-7">
                    <table class="table table-bordered table-hover">

                        <thead>
                        <tr>
                            <td>Event ID</td>
                            <td>Event</td>
                            <td>Start Date</td>
                            <td>End Date</td>
                            <td>Tags</td>
                            <td>Approval status</td>
                            <td>Actions</td>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each data}}
                        <tr>
                            <td>{{event_id}} </td>
                            <td>{{event}}</td>
                            <td>{{start_date}}</td>
                            <td>{{end_date}}</td>
                            <td>{{tag_name}}</td>
                            <td>{{isApproved}}</td>
                            <td>
                                <!--<a href="/update/<%= data[i].id %>" class="btn btn-info">Edit</a>-->
                                <!--<a href="/delete/<%= data[i].id %>" class="btn btn-danger">Delete</a>-->
                                <a href="/edit/{{event_id}}" class="btn btn-info" id="edit_button">Edit</a>
                                <a href="/delete/{{event_id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete?');">Delete</a>
                            </td>
                        </tr>
                        {{/each}}

                        </tbody>
                    </table>
                </div>

                <div class="col-xs-6 col-md-4">
                    {{> addevent }}
                </div>
            </div>
        </div>

    </body>

</html>
   
<script src="/scripts/admin.js"></script>

