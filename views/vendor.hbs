<!DOCTYPE html>
<html>
    <head>
        
        {{> bootstrap}}
        <link href="/css/menu.css" type="text/css" rel="stylesheet" />
        <link href="/css/vendor.css" type="text/css" rel="stylesheet" />


    </head>

    <body>

        {{> menu}}

        <div class="col-md-12">
            <p><strong>Welcome {{vendor}}!</strong> </p>
            <div class="row">
                <div class="col-md-7">
                    <table class="table table-bordered table-hover">

                        <thead>
                        <tr>
                            <td>Event ID</td>
                            <td>Event</td>
                            <td>Start Date</td>
                            <td>End Date</td>
                            <td>Tags</td>
                            <td>Approval status</td>
                            <td>Actions</td>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each data}}
                        <tr>
                            <td>{{event_id}} </td>
                            <td>{{event}}</td>
                            <td>{{start_date}}</td>
                            <td>{{end_date}}</td>
                            <td>{{tag_name}}</td>
                            <td>{{isApproved}}</td>
                            <td>
                                {{#ifCond isApproved "Pending"}}
                                    <a href="/edit/{{event_id}}" class="btn btn-info">Edit</a>
                                {{else}}
                                    <a href="#" class="btn btn-info disabled">Edit</a>
                                {{/ifCond}}
                                <a href="/delete/{{event_id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete?');">Delete</a>
                            </td>
                        </tr>
                        {{/each}}

                        </tbody>
                    </table>
                </div>

                <div class="col-md-5">
                    {{> addevent }}
                </div>
            </div>
        </div>

    </body>

</html>
   
<script src="/scripts/admin.js"></script>

