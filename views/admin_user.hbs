<!DOCTYPE html>
<html>
    <head>
        
        {{> bootstrap}}        
        <link href="/css/menu.css" type="text/css" rel="stylesheet" />
        <link href="/css/admin.css" type="text/css" rel="stylesheet" />

    </head>

    <body>

        {{> menu_admin}}

        <div class="col-md-12">
            <p class="form_text">Welcome Admin! </p>
            <div class="rows">
                <!-- Tab links -->
                <div class="tab">
                    <button class="tablinks" onclick="openUser(event, 'Vendor')" id="defaultOpen">Vendor</button>
                    <button class="tablinks" onclick="openUser(event, 'Parent')">Parent</button>
                </div>
                <!-- Tab content -->
                <div id="Vendor" class="tabcontent table-responsive col-md-12">
                    <table class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <td>User ID</td>
                            <td>User</td>
                            <td>Name</td>
                            <td>Vendor</td>
                            <td>Vendor Address</td>
                            <td>Vendor Website</td>
                            <td>Contact Number</td>
                            <td>Approval Status</td>
                            <td>Actions</td>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each vendor_data}}
                            <tr>
                                <td>{{user_id}} </td>
                                <td>{{email}}</td>
                                <td>{{contact_name}}</td>
                                <td>{{vendor_name}}</td>
                                <td>{{address}}</td>
                                <td>{{website}}</td>
                                <td>{{phone_num}}</td>
                                <td>{{isApproved}}</td>
                                <td>
                                    {{#ifCond isApproved "Approved"}}
                                        <a class="btn btn-info disabled">Approve</a>
                                    {{else}}
                                        <a onclick="approveVendor({{user_id}})" class="btn btn-info">Approve</a>
                                    {{/ifCond}}
                                </td>
                            </tr>
                        {{/each}}

                        </tbody>
                    </table>
                </div>

                <div id="Parent" class="tabcontent table-responsive col-md-12">
                    <table class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <td>User ID</td>
                            <td>User</td>
                            <td>Name</td>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each parent_data}}
                            <tr>
                                <td>{{user_id}} </td>
                                <td>{{email}}</td>
                                <td>{{name}}</td>
                            </tr>
                        {{/each}}

                        </tbody>
                    </table>
                </div>

            </div>
        </div>

    </body>

</html>
   
<script src="/scripts/admin.js"></script>

