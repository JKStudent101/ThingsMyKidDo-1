<!DOCTYPE html>
<html>

<head>
    {{> bootstrap}}
    <link href="/css/menu.css" type="text/css" rel="stylesheet" />
    <link href="/css/login.css" type="text/css" rel="stylesheet" />
    <link href="/css/home.css" type="text/css" rel="stylesheet" />

</head>

<body>
    {{#ifCond user_type "vendor"}}
    {{> menu_vendor}}
    {{else}}
    {{#ifCond user_type "admin"}}
    {{> menu_admin}}
    {{else}}
    {{#ifCond user_type "parent"}}
    {{> menu_parent}}
    {{/ifCond}}
    {{/ifCond}}
    {{/ifCond}}

    <div class="container">
        <div class="homeContainer">
            <div class="playText"> <b>Let's Play! </div>
            <div class="notification-container">
                <span class="notification-text">Notifications</span>
                <label class="switch">
                <input type="checkbox" id="notif-check">
                <span class="slider round"></span>
            </label>
            </div>
            
            <div class="play">
                <a href="/event">
                    <div class="search">Events</div>
                </a>
                <a href="/event"><img src="/src/searchIcon.png" alt="HTML tutorial"
                        style="width:50px;height:50px;border:0;"></a>
                <a href="/profile">
                    <div class="profile">Profile</div>
                </a>
                <a href="/profile"><img src="/src/profileIcon.png" alt="HTML tutorial"
                        style="width:50px;height:50px;border:0;"></a>
            </div>




            <div class="addContainer">
                <div class="ad">Advertisement</div>
            </div>

            <div class="blogContainer">
                <div class="blog">Blog Posts</div>
            </div>
            {{!-- <div class="col-md-6">
                <div class="ad">Blog Entries</div>
            </div> --}}

            <div class="terms">
                <a href="www.google.ca">Terms and Conditions</a>
            </div>

        </div>


    </div>

</body>

</html>

<script src="/scripts/notifications.js"></script>