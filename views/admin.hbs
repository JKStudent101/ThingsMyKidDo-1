<!DOCTYPE html>
<html>
    <head>
        
        {{> bootstrap}}        
        <link href="/css/menu.css" type="text/css" rel="stylesheet" />

    </head>

    <body>

        {{> menu_admin}}

        <div class="container xs-12">
            <p><strong>Welcome Admin!</strong></p>
            <div class="row">
                <div class="col-xs-12">
                    <table class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <td>Event ID</td>
                            <td>Vendor</td>
                            <td>Event</td>
                            <td>Event Description</td>
                            <td>Start Date</td>
                            <td>End Date</td>
                            <td>Status</td>
                            <td>Approval status</td>
                            <td>Actions</td>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each data}}
                        <tr>
                            <td>{{event_id}} </td>
                            <td>{{vendor_name}}</td>
                            <td>{{event}}</td>
                            <td>{{description}}</td>
                            <td>{{start_date}}</td>
                            <td>{{end_date}}</td>
                            <td>{{status}}</td>
                            <td>{{isApproved}}</td>
                            <td>
                                <!--<a href="/update/<%= data[i].id %>" class="btn btn-info">Edit</a>-->
                                <!--<a href="/delete/<%= data[i].id %>" class="btn btn-danger">Delete</a>-->
                                <button onclick="approve({{event_id}})" class="btn btn-info">Approve</button>                               
                                <button href="#" class="btn btn-danger">Delete</button>
                            </td>
                        </tr>
                        {{/each}}

                        </tbody>
                    </table>
                </div>

            </div>
        </div>

    </body>

</html>
   
<script src="/scripts/admin.js"></script>

